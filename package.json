{
  "name": "testwright",
  "version": "0.1.0",
  "description": "Reusable Playwright testing infrastructure for multi-domain SPA applications",
  "homepage": "https://github.com/agebhardtsbauer/testwright#readme",
  "bugs": {
    "url": "https://github.com/agebhardtsbauer/testwright/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agebhardtsbauer/testwright.git"
  },
  "license": "ISC",
  "author": "alan",
  "type": "module",
  "bin": {
    "testwright": "./dist/cli/index.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./config": {
      "import": {
        "types": "./dist/config/index.d.ts",
        "default": "./dist/config/index.js"
      },
      "require": {
        "types": "./dist/config/index.d.cts",
        "default": "./dist/config/index.cjs"
      }
    },
    "./reporter": {
      "import": {
        "types": "./dist/reporter/index.d.ts",
        "default": "./dist/reporter/index.js"
      },
      "require": {
        "types": "./dist/reporter/index.d.cts",
        "default": "./dist/reporter/index.cjs"
      }
    },
    "./helpers": {
      "import": {
        "types": "./dist/helpers/index.d.ts",
        "default": "./dist/helpers/index.js"
      },
      "require": {
        "types": "./dist/helpers/index.d.cts",
        "default": "./dist/helpers/index.cjs"
      }
    },
    "./fixtures": {
      "import": {
        "types": "./dist/fixtures/index.d.ts",
        "default": "./dist/fixtures/index.js"
      },
      "require": {
        "types": "./dist/fixtures/index.d.cts",
        "default": "./dist/fixtures/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc --noEmit -p playwright/tsconfig.json",
    "test": "vitest",
    "test:examples": "playwright test -c playwright/playwright.config.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "qa",
    "automation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "dependencies": {
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
